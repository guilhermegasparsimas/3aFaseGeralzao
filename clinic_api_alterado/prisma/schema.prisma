generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:senai@127.0.0.1:5432/clinicadb"
}

// Tabela usuario
model Usuario {
  id         Int          @id @default(autoincrement())
  nome       String
  email      String       @unique
  senha      String
  cargo      String
  Prontuario Prontuario[]
  Token      Token[]
  Consulta   Consulta[]

  @@map("usuario")
}

model Prontuario {
  id                    Int      @id @default(autoincrement())
  descricao             String
  data                  DateTime
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])
  usuario               Usuario  @relation(fields: [medico_responsavel_id], references: [id])

  @@map("prontuario")
}

model Consulta {
  id                    Int      @id @default(autoincrement())
  motivo                String
  data_consulta         DateTime
  observacoes           String
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])
  usuario               Usuario  @relation(fields: [medico_responsavel_id], references: [id])

  @@map("consulta")
}

model Paciente {
  id              Int          @id @default(autoincrement())
  nome            String
  cpf             String
  telefone        Int
  email           String
  data_nascimento DateTime
  sexo            String
  responsavel     String?
  Prontuario      Prontuario[]
  Consulta        Consulta[]
  Exame           Exame[]

  @@map("paciente")
}

enum TipoExame {
  SANGUE
  URINA
  RAIOX
  ULTRASSOM
  RESSONANCIA
}

model Exame {
  id           Int       @id @default(autoincrement())
  tipo_exame   TipoExame
  resultado    String
  data_exame   DateTime
  link_arquivo String
  observacoes  String
  paciente_id  Int
  paciente     Paciente  @relation(fields: [paciente_id], references: [id])

  @@map("exame")
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expireAst DateTime
  createAt  DateTime @default(now())
  usuario   Usuario  @relation(fields: [userId], references: [id])

  @@map("token")
}
